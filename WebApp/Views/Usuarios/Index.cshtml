@using System.Collections
@using Entidades.Entidades

@model IEnumerable<Usuario> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Lista Usuarios</h1>
<p>Lista de usuraios para solicitud de tarjeta de credito</p>
<div class="container">
    <div class="row">
        <div class= "colcol-sm-6">
        <h3>Lista Usuarios</h3>
        </div>
        <a class="btn btn-success d-block">
            Crear nuevo Usuario
        </a>
    </div>
<div class="row">
    <table>
        <thead>
            <tr>
              <td>Id</td>
              <td>Nombre</td>
              <td>Apellido</td>
              <td>Edad</td>
              <td>Email</td>
            </tr>
        </thead>
        <tbody>
                @foreach(Usuario usuario in Model)
                {
               <tr>
              <td>@usuario.id</td>
              <td>@usuario.Nombre</td>
              <td>@usuario.Apellido</td>
              <td>@usuario.Cedula</td>
              <td>@usuario.Email</td>
              </tr>

                }
        </tbody>
    </table>
</div>
</div>
